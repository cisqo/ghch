{
  "name": "Clubify",
  "manifest_version": 2,
  "version": "1.4.4",
  "description": "Transforms text references to Clubhouse stories (e.g.: 'ch<story-id>') to clickable links to Clubhouse.",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "background": {
    "scripts": ["bg.js"]
  },
  "page_action": {
    "default_icon": "icon_16.png",
    "default_title": "View Clubify settings."
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["clubify.js"],
      "css": ["clubify.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": ["icon_*.png"],
  "options_page": "clubify-config.html"
}
